<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:fitsSystemWindows">false</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="TextInputLayoutWhite">

        <item name="android:textColorHint">@android:color/white</item>

    </style>

    <style name="TextInputLabelAppearance" parent="@android:style/TextAppearance">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>

    </style>

    <style name="TextInputEditTextWhiteTheme">

        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <!--<item name="colorControlNormal">@color/windowBackground</item>
        <item name="colorControlActivated">@color/stepTitleColor</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>-->
        <item name="android:textSize">18sp</item>

    </style>

    <style name="TextInputEditTextWhite" >

        <item name="android:theme">@style/TextInputEditTextWhiteTheme</item>
        <item name="android:paddingTop">4dp</item>

    </style>

</resources>